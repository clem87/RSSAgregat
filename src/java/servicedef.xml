<!DOCTYPE def [
  <!ELEMENT def (service*)>
  <!ELEMENT service (tache)>
  <!ELEMENT tache (schedulejourfixe| scheduleduree)>
  <!ELEMENT schedulejourfixe EMPTY>
  <!ELEMENT scheduleduree EMPTY>
  
  <!ATTLIST service class CDATA #REQUIRED>
  <!ATTLIST service poolsize CDATA #REQUIRED>
  <!ATTLIST tache class CDATA #REQUIRED>
  <!ATTLIST schedulejourfixe jour (lu|ma|me|je|ve|sa|di) #REQUIRED>
  <!ATTLIST schedulejourfixe heure CDATA #REQUIRED> <!-- Le format de kl'heure heure:minute exemple : 01:01 02:02 ... -->
   <!ATTLIST scheduleduree nbSeconde CDATA #REQUIRED>
  
]>

<def>
    <service class="" poolsize="">
        <tache class="truc">
            <scheduleduree nbSeconde="1"></scheduleduree>
            
        </tache>
    </service>
</def>

